{{#paper-content class="md-whiteframe-z1 list-demo"}}
  {{#paper-list}}
    {{#each model as |animal|}}
      {{#paper-item class="md-3-line"}}
        <div class="md-list-item-text">
          <h2>{{animal.firstName}}</h2>
          <h4>{{animal.lastName}}</h4>
        </div>
        {{#paper-button raised=true primary=true action="goToEditAnimal" param=animal}}Edit{{/paper-button}}
        {{#paper-button raised=true warn=true action="deleteAnimal" param=animal}}Delete{{/paper-button}}
      {{/paper-item}}
      {{paper-divider}}
    {{/each}}
  {{/paper-list}}
{{/paper-content}}
